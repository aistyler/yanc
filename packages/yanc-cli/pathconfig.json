{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/src/*": [
        "./_src/*"
      ],
      "~/lib/*": [
        "./_src/lib/*"
      ]
    }
  },
  "babel": {
    "root": ".",
    "alias": {
      "~/src": "./_src",
      "~/lib": "./_src/lib"
    }
  },
  "jest": {
    "^~/src/(.*)$": "<rootDir>/_src/$1",
    "^~/lib/(.*)$": "<rootDir>/_src/lib/$1"
  }
}